<div class="container">
 <div class="row">
  <div class="col-md-6 offset-md-3">
         <p class="pt-5"></p>
<%= form_for @message, :url => done_path do |f| %>
<div>
    <h2>メッセージ確認</h2>
    <div>
        <strong>名前</strong></br>
    
        <%= f.hidden_field :name %>
        <%= @message.name %>
  
    </div>
    <div>
        <strong>email</strong></br>
    
        <%= f.hidden_field :email %>
        <%= @message.email %>
   
    </div>
    <div>
        <strong>内容</strong></br>
   
        <%= f.hidden_field :content %>
        <%= @message.content %>
   
    </div>
   <p></p>
        <%= f.submit '戻る', name: 'back', class: "btn btn-warning" %>
        <p></p>
      <%= f.submit '送信する', class: "btn btn-primary" %>
    
</div>

<% end %>
</div>
</div>
</div>