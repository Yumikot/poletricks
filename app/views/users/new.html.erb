
<% provide(:title, 'Sign up') %>
<div class="container">
<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Sign up</h1>

   <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      <p></p>
      <%= f.submit "Create my account", class: "btn btn-warning" %>
    <% end %>
</div>
</div>
</div>

	
