<div class="container">
 <div class="row">
  <div class="col-md-6 offset-md-3">
<p class="pt-5"></p>
<h1>新規記事作成</h1>
<%= form_for @article do |f| %>
<strong>タイトル</strong>
	<%= f.text_field :title %></br>
	<p></p>
	<% if @article.persisted? && @article.image? %>
      <%= image_tag @article.image.to_s %>
      <label><%= f.check_box :remove_image %> 画像を削除</label>
    <% else %>
      <%= f.hidden_field :image_cache %>
    <% end %>
	 <%= f.file_field :image %>
	<strong>text</strong>
	
	<%= f.text_area :text %>
</br>
	<P></P>
	<%= f.submit :submit %>
<% end %>
 </div>
 </div>
</div>